<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NotificationActivity">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/module_notification_btn_send_tap_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="send tap notification"
            app:layout_constraintBottom_toTopOf="@id/module_notification_btn_send_replay_notification"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/module_notification_btn_send_replay_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="send replay notification"
            app:layout_constraintBottom_toTopOf="@id/module_notification_btn_send_progress_notification"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/module_notification_btn_send_tap_notification" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/module_notification_btn_send_progress_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="send progress notification"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/module_notification_btn_send_replay_notification" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>